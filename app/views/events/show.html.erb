<div hidden id='location'>{"lng": <%=@event.trail.longitude%>, "lat": <%=@event.trail.latitude%>}</div>
<div class='event-show-container'>

    <section class='event-show-info'>
        <h3>Event Details</h3>
        <h5>
            Hosted by:
        </h5>
        <p>

            <% @event.hosts.each do |host| %>
            <%= host.username%>
            <%end%>
        <h5>Event Description:</h5>
        <p>
            <%= @event.description %>
        </p>
        <h5>Event Date:</h5>
        <p>
            <%= @event.format_date %>
        </p>
    </section>
    <section class="trail-map-info">
      <h1> Event Name:
        <%= @event.name %>
      </h1>
    </section>
    <br>
    <section class= 'event-map'>
      <div class='event-map-container'>
        <div id="map" class='map'></div>
      </div>
    </section>

    <section class='trail-show-info'>
        <h3>Trail Details</h3>
        <h5>Trail Name:</h5>
        <p><%= @event.trail.name %>
        </p>
        <h5>Trail Difficulty:</h5>
        <p><%= @event.trail.difficulty %>
        </p>
        <h5>Trail Location:</h5>
        <p><%= @event.trail.location %>
        </p>
        <h5>Trail Distance:</h5>
        <p><%= @event.trail.distance %>
        </p>
    </section>

</div>
<div class='login-to-join'>
<%= render "events/buttons/#{@status}" %>
</div>

<%= render partial: 'shared/googlemapcall', :locals => {googleMap: 'showTrailMap'} %>
<%= javascript_include_tag "maps/show_trail.js" %>
