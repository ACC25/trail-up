<div class='event'>
    <h3>
        <%= event.name %>
    </h3>
    <h4>
        <%=event.trail_name %>
    </h4>
    <h4>
        <%=event.format_date %>
    </h4>
    <h4>
        <%=event.location %>
    </h4>
    <p>
        <%=event.description %>
    </p>
    <p>
        <%= link_to "Log In", login_path %> or
            <%= link_to "Sign Up", signup_path %> to Join!</p>
</div>