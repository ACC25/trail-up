<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Location</th>
            <th>Main Host</th>
            <th>Trail</th>
            <th>Guest Count</th>
        </tr>
    </thead>
    <tbody>
        <% @events.each do |event| %>
            <tr class='event-cell'>
                <td>
                    <%=event.name%>
                </td>
                <td>
                    <%=event.date%>
                </td>
                <td>
                    <%=event.trail.location%>
                </td>
                <td>
                    <%=event.hosts.first.username%>
                </td>
                <td>
                    <%=event.trail.name%>
                </td>
                <td>
                    <%=event.guests.count%>
                </td>
            </tr>
            <%end%>
    </tbody>
</table>