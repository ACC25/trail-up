<div class='search-box'>
    <input id="location-search-box" type="text" placeholder="location...">
    <input id='location-search-button' type="submit" value="Find Trails">
</div>
<div class='map_holder'>
    <div id="map" class='map'></div>
</div>

<div class='form trail-form'>
  <%= form_for(@trail) do |f| %>
  <%=f.label :name %>
  <%=f.text_field :name %>
  <%=f.label :description %>
  <%=f.text_field :description %>
  <%=f.label :difficulty %>
  <%=f.select :difficulty,options_for_select(trail_ratings)%>
  <%=f.label :location %>
  <%=f.text_field :location %>
  <%=f.label :distance %>
  <%=f.number_field(:distance, step: 0.1) %>
  <%=f.label :rating %>
  <%=f.number_field(:rating, in: 0.0..5.0, step: 0.1) %>
  <%=f.submit "Create New Trail"%>
  <%end%>
</div>

<script src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['GOOGLE_API_KEY']%>&callback=plopMarkerMap" async defer></script>