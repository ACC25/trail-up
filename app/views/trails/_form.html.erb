<div class='form trail-form'>
  <%= form_for(@trail) do |f| %>
    <%=hidden_field_tag :plop_location %>
    <%=f.label :name %>
    <%=f.text_field :name %>
    <%=f.label :description %>
    <%=f.text_field :description %>
    <%=f.label :difficulty %>
    <%=f.select :difficulty,options_for_select(trail_ratings)%>
    <%=f.label :location %>
    <%=f.text_field :location %>
    <%=f.label :distance %>
    <%=f.number_field(:distance, step: 0.1) %>
    <%=render partial: 'pictures/form_for_many', :locals => { f: f, object: @trail } %>
    <%=f.submit "Create New Trail", id: 'submit'%>
  <%end%>
</div>